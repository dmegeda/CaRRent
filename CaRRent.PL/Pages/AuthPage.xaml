<Page x:Class="CaRRent.PL.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CaRRent.PL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" FontSize="18"
      Title="AuthPage">

    <Grid Background="#FFB6B6B6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="350"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" Margin="0,35,0,0" Text="LOGIN" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.395,0.298"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,35,0,0" Text="REGISTER" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.395,0.298" Grid.Column="1"/>
        <TextBox x:Name="userNameTb" Margin="65,93,65,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxWidth="200"/>
        <TextBox x:Name="passwordTb" Margin="65,165,65,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxWidth="200"/>
        <TextBox x:Name="registerUserNameTb" Margin="65,93,65,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" MaxWidth="200" Background="White"/>
        <TextBox x:Name="registerPasswordTb" Margin="65,165,65,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" MaxWidth="200" RenderTransformOrigin="0.5,-1.201"/>
        <Button x:Name="LoginBtn" Content="LOGIN" Margin="100,369,100,0" VerticalAlignment="Top" Height="35" MaxWidth="200" Click="LoginBtn_Click"/>
        <Button x:Name="RegisterBtn" Content="REGISTER" Margin="100,369,100,0" VerticalAlignment="Top" Height="35" Grid.Column="1" MaxWidth="200" Click="RegisterBtn_Click"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Height="293" Margin="0,60,0,0" VerticalAlignment="Top" Width="5" Background="#FF838383"/>
        <TextBox x:Name="confirmRegisterPasswordTb" Margin="65,236,65,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" MaxWidth="200" RenderTransformOrigin="0.509,-0.937"/>
    </Grid>
</Page>
